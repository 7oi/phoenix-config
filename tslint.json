{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "arrow-parens": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "tabs"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [
      false,
      120
    ],
    "no-consecutive-blank-lines": [
      true,
      1
    ],
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      false,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  },
  "rulesDirectory": []
}
